<%= render partial: "/shared/errors", locals: { error_model: @user } %>
<div id="wrapper" class="container">
	
	<main class="row">
		
		<%= render partial: "/shared/main_navbar", locals: { } %>
		
		<!-- Building the content section -->
		<div id="content">
			<div id="hero_left" class="col-md-7">
				<div id="hero_left_content">
					<h2>Connect with all your friends!</h2>
					<ul>
						<li><b>See photos and updates</b> in your news feed.</li>
						<li><b>Post your status for the world to see</b> from your profile</li>
						<li><b>Get in touch with your friends</b> by "friending" them</li>
						<li><b>Like things</b> because you're a positive person!</li>
					</ul>
				</div>
			</div>
			
			<div id="signup_right" class="col-md-4 pull-left">
				<h2>Sign Up!</h2>
				<%= form_for @user, :url => users_path, :method => 'post' do |user_fields| %>
					
					<div class="form-group col-md-6">
						<%= user_fields.text_field :first_name, {placeholder: "First Name", class: "form-control"} %>
					</div>

					<div class="form-group col-md-6">
						<%= user_fields.text_field :last_name, {placeholder: "Last Name", class: "form-control"} %>
					</div>
					
					<div class="form-group col-md-12">
						<%= user_fields.text_field :email, {placeholder: "Email", class: "form-control"} %>
					</div>	
					
					<div class="form-group col-md-12">
						<%= user_fields.password_field :password, {placeholder: "Password", class: "form-control"} %>
					</div>		

					<div class="form-group col-md-12">
						<%= user_fields.password_field :password_confirmation, {placeholder: "Confirm your password", class: "form-control"} %>
					</div>
	
					<h3>Birthday:</h3>
					<div class="form-group col-md-4">
						<%= select_tag :birthday_month, options_for_select(create_months_collection), { prompt: "Month", class: "form-control"} %>
					</div>
					 
					<div class="form-group col-md-4">
						<%= select_tag :birthday_day, options_for_select((1..31).to_a), { prompt: "Day", class: "form-control"} %>
					</div>
					
					<div class="form-group col-md-4">
						<%= select_tag :birthday_year, options_for_select((1950..Date.today.year).to_a), { prompt: "Year", class: "form-control"} %>
					</div>
					
					<h3>Gender:</h3>
					<div class="radio col-md-12">
					  <label class="radio-inline">
					    <%= user_fields.radio_button("gender", 1) %>
					    Male
					  </label>

					  <label class="radio-inline">
					    <%= user_fields.radio_button("gender", 2) %>
					    Female
					  </label>
					</div>
					
					<div class="form-group">
						<%= user_fields.submit class: "btn btn-success col-sm-12" %>
					</div>
				
				<% end %><!-- end form_for -->
			
			</div>
		</div>

	</main>
	
</div><!-- /Wrapper div -->